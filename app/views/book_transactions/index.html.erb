<p id="notice"><%= notice %></p>

<h1>Listing Book Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Name</th>
      <th>Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_transactions.each do |book_transaction| %>
      <tr>
        <td><%= book_transaction.isbn %></td>
        <td><%= book_transaction.name %></td>
        <td><%= book_transaction.member %></td>
        <td><%= link_to 'Show', book_transaction %></td>
        <td><%= link_to 'Edit', edit_book_transaction_path(book_transaction) %></td>
        <td><%= link_to 'Destroy', book_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

